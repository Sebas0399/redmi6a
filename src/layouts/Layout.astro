---
export interface Props {
    title: string;
    description?: string;
}
import "../styles/global.css";
const { title, description = "Development Page" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>{title}</title>
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    </head>
    <body
        class="font-sans text-gray-100 bg-gradient-to-br from-gray-900 to-slate-800"
    >
        <header class="text-center py-8 backdrop-blur-sm bg-black/30">
            <h1 id="Titulo" class="text-4xl md:text-5xl font-bold text-white">
                Poco X3 NFC
            </h1>
            <p id="Descripcion" class="text-lg text-gray-300 mt-2">
                {description}
            </p>
        </header>

        <nav class="bg-gray-800/50 backdrop-blur-md sticky top-0 z-50">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between">
                    <!-- Mobile button -->
                    <div class="md:hidden flex items-center">
                        <button id="menu-btn" class="text-white py-4 px-2">
                            <svg
                                class="w-6 h-6"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                                ></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Primary Nav -->
                    <div
                        class="hidden md:flex items-center space-x-1 mx-auto"
                        id="menu"
                    >
                        <a
                            href="/"
                            class="py-4 px-3 text-gray-200 hover:text-blue-400 transition duration-300"
                            >Home</a
                        >
                        <a
                            href="/roms"
                            class="py-4 px-3 text-gray-200 hover:text-blue-400 transition duration-300"
                            >Custom Roms</a
                        >
                        <a
                            href="/root"
                            class="py-4 px-3 text-gray-200 hover:text-blue-400 transition duration-300"
                            >Root</a
                        >
                        <a
                            href="/twrp"
                            class="py-4 px-3 text-gray-200 hover:text-blue-400 transition duration-300"
                            >TWRP</a
                        >
                        <a
                            href="https://t.me/PocoX3_Official"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="py-4 px-3 text-gray-200 hover:text-blue-400 transition duration-300"
                            >Telegram Group</a
                        >
                    </div>
                </div>
            </div>
        </nav>

        <main class="py-8">
            <slot />
        </main>

        <script is:inline>
            const btn = document.getElementById("menu-btn");
            const menu = document.getElementById("menu");

            btn.addEventListener("click", () => {
                // Toggle 'hidden' on the main menu
                menu.classList.toggle("hidden");
                // Flex the menu items for mobile view
                menu.classList.toggle("flex");
                menu.classList.toggle("flex-col");
                menu.classList.toggle("items-center");
                menu.classList.toggle("pb-4");
            });
        </script>
    </body>
</html>
